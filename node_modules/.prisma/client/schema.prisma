generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int       @id @default(autoincrement())
  nome            String
  email           String    @unique
  senha           String
  cpf             String    @unique
  celular         String
  codigoIndicacao String?
  corridas        Corrida[] @relation("PassageiroCorridas")
}

model Motorista {
  id       Int       @id @default(autoincrement())
  nome     String
  email    String    @unique
  senha    String
  cnh      String
  veiculo  String
  corridas Corrida[] @relation("MotoristaCorridas")
}

model Corrida {
  id             Int       @id @default(autoincrement())
  origem         String
  destino        String
  formaPagamento String
  valor          Float
  status         String
  dataInicio     DateTime  @default(now())
  dataFim        DateTime?
  passageiroId   Int
  motoristaId    Int?

  passageiro Usuario    @relation("PassageiroCorridas", fields: [passageiroId], references: [id])
  motorista  Motorista? @relation("MotoristaCorridas", fields: [motoristaId], references: [id])
  avaliacao  Avaliacao?
}

model Avaliacao {
  id        Int    @id @default(autoincrement())
  corridaId Int    @unique
  nota      Float
  tipo      String // "motorista" ou "passageiro"

  corrida Corrida @relation(fields: [corridaId], references: [id])
}
