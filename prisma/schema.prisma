generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id                    Int        @id @default(autoincrement())
  nome                  String
  email                 String     @unique
  senha                 String
  cpf                   String     @unique
  endereco              String
  foto                  String
  telefone              String
  perfil                String
  criadoEm              DateTime   @default(now())
  atualizadoEm          DateTime   @updatedAt
  codigoIndicacao       String?    @unique
  indicanteId           Int?
  corridasComoMotorista corridas[] @relation("MotoristaCorridas")
  corridas              corridas[] @relation("PassageiroCorridas")
  indicante             usuarios?  @relation("IndicanteIndicado", fields: [indicanteId], references: [id])
  indicados             usuarios[] @relation("IndicanteIndicado")
}

model corridas {
  id           String    @id @default(uuid())
  passageiroId Int
  motoristaId  Int?
  status       String
  origem       String
  destino      String
  distanciaKm  Float?
  valor        Float?
  agendada     Boolean   @default(false)
  dataHora     DateTime?
  criadaEm     DateTime  @default(now())
  atualizadaEm DateTime  @updatedAt
  motorista    usuarios? @relation("MotoristaCorridas", fields: [motoristaId], references: [id])
  passageiro   usuarios  @relation("PassageiroCorridas", fields: [passageiroId], references: [id])
} 
