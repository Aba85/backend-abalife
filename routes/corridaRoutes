const express = require('express');
const router = express.Router();
const CorridaController = require('../controllers/CorridaController');

router.post('/chamar', CorridaController.chamarCorrida);
router.get('/passageiro/:id', CorridaController.listarCorridasPassageiro);
router.get('/motorista/:id', CorridaController.listarCorridasMotorista);
router.put('/:id/aceitar', CorridaController.aceitarCorrida);
router.put('/:id/finalizar', CorridaController.finalizarCorrida);

module.exports = router;
